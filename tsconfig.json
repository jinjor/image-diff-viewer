{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "pretty": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "declaration": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "listEmittedFiles": false,
    "listFiles": false,
    "preserveWatchOutput": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": []
}
